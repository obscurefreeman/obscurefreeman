{% if site.github %}
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="rounded-social-buttons">
                <!-- <a class="social-button facebook" href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a class="social-button twitter" href="https://www.twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a>
                <a class="social-button linkedin" href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin"></i></a>
                <a class="social-button tiktok" href="https://www.tiktok.com/" target="_blank"><i class="fab fa-tiktok"></i></a> -->
                <a class="social-button bilibili" href="https://space.bilibili.com/523837807" target="_blank"><i class="fab fa-bilibili"></i></a>
                <a class="social-button discord" href="https://discord.com/channels/806044973795246080" target="_blank"><i class="fab fa-discord"></i></a>
                <a class="social-button steam" href="https://steamcommunity.com/id/obscurefreeman/" target="_blank"><i class="fab fa-steam"></i></a>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <a href="{{ site.url }}" class="mb-3 me-3 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <img src="{{ site.logo_url }}" class="rounded" alt="{{ site.description }}" width="30" height="30">
                </a>
                <span class="mb-3 mb-md-0">
                <a href="{{ site.github.repository_url }}" class="text-body-secondary text-decoration-none ">
                    {{ site.github.repository_nwo }}
                </a>
            </span>
            </div>
            <ul class="nav col-md-6 justify-content-end">
                <li class="nav-item me-3">
                    页面更新于 {{ site.time | date_to_long_string }}
                </li>
                {% if site.github.releases and site.github.releases[0] %}
                    <li class="nav-item">
                        {% assign latestRelease = site.github.releases[0] %}
                        最新发布：
                        <strong>{{ latestRelease.tag_name }}{% if latestRelease.prerelease == true %} (pre-release){% endif %}</strong>
                    </li>
                {% endif %}
            </ul>
        </footer>
    </div>
{% endif %}
